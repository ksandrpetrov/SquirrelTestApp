<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <permission android:name="com.example.heis2025.permission.READ_TEXT_RECORDS"
        android:label="Read Text Records"
        android:protectionLevel="normal" />
    <permission android:name="com.example.heis2025.permission.WRITE_TEXT_RECORDS"
        android:label="Write Text Records"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bel"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bel"
        android:supportsRtl="true"
        android.theme="@style/Theme.Heis2025">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Heis2025">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".PlaybackService" android:exported="true" android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService"/>
            </intent-filter>
        </service>
        <service android:name=".GreetingBackgroundService"
            android:enabled="true"
            android:exported="false" />
        
        <provider
            android:name=".data.TextRecordsProvider"
            android:authorities="com.example.heis2025.provider"
            android:exported="true"
            android:readPermission="com.example.heis2025.permission.READ_TEXT_RECORDS"
            android:writePermission="com.example.heis2025.permission.WRITE_TEXT_RECORDS" />
    </application>

</manifest>